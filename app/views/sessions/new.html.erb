<div class="container">
    <h2 class="title">Вхід</h2>
    <p class="mt">Ваш email та пароль для входу</p>

  <div class="mt">
        <%= form_for :session, url: session_path do |form|%>
         <p class="mt"><%= form.label :email %></p>
         <p><%=form.text_field :email, class: 'form-text-field' %></p>

         <p class="mt"><%= form.label :password%></p>
         <p><%=form.text_field :password, class: 'form-text-field' %></p>

         <p class="mt"><%= form.submit 'Увійти', class: 'button button-main'%></p>
        <%end%>
    </div>


</div>
